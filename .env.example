# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=development

# Database Configuration
DATABASE_URL=postgresql://cursive_user:password@localhost:5432/cursive_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Anthropic API Configuration
CLAUDE_API_KEY=your_anthropic_api_key_here

# Encryption Configuration (for storing user API keys)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_encryption_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=50
RATE_LIMIT_PER_DAY=500

# CORS Configuration (comma-separated allowed origins)
ALLOWED_ORIGINS=http://localhost:5022,http://127.0.0.1:5022

# Billing Configuration
# Anthropic pricing (per 1K tokens)
ANTHROPIC_INPUT_PRICE=0.003
ANTHROPIC_OUTPUT_PRICE=0.015
# Our markup percentage
MARKUP_PERCENTAGE=15

# Free tier limits
FREE_TIER_TOKENS_PER_MONTH=10000

# Pro tier pricing
PRO_TIER_MONTHLY_PRICE=9.00
PRO_TIER_INCLUDED_TOKENS=50000
PRO_TIER_EXTRA_TOKEN_PRICE=0.02

# Session Configuration
SESSION_TYPE=redis
SESSION_PERMANENT=false
SESSION_USE_SIGNER=true
PERMANENT_SESSION_LIFETIME=86400
